{
  "name": "sonos-controller-for-chrome",
  "version": "0.0.1",
  "description": "Sonos Controller for Chrome",
  "main": "dist/background.js",
  "scripts": {
    "watch": "./node_modules/.bin/watch \"npm run-script compile && npm run-script minify-bg && npm run-script minify-ui\" src",
    "minify-ui": "node_modules/.bin/browserify --extension=.jsx -e tmp/ui/app.js > js/ui.js",
    "minify-bg": "node_modules/.bin/browserify -e tmp/background/background.js > js/background.js",
    "compile": "node_modules/.bin/6to5 src --out-dir=tmp --source-maps-inline -m common -a",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "6to5": "^2.2.0",
    "browserify": "^8.1.1",
    "watch": "^0.13.0"
  }
}
