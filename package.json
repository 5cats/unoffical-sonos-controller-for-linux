{
  "name": "sonos-controller-for-chrome",
  "version": "0.0.1",
  "description": "Sonos Controller for Chrome",
  "main": "dist/background.js",
  "scripts": {
    "watch": "npm run-script watch-ui & npm run-script watch-background",
    "watch-ui": "./node_modules/.bin/watch \"npm run-script compile-ui\" src/ui",
    "watch-background": "./node_modules/.bin/watch \"npm run-script compile-background\" src/background",
    "compile": "npm run-script compile-ui && npm run-script compile-background",
    "compile-ui": "node_modules/.bin/6to5 src/ui --out-file=js/compiled_ui.js -m amd -a",
    "compile-background": "node_modules/.bin/6to5 src/background --out-file=js/compiled_background.js -m amd -a",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "6to5": "^2.2.0",
    "watch": "^0.13.0"
  }
}
